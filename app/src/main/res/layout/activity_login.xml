<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/login_shape_top_back"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/login_shape_bottom_back"
            android:scaleType="fitXY"
            android:layout_marginBottom="-40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/login_shape_top"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/login_shape_bottom"
            android:scaleType="fitXY"
            android:layout_marginBottom="-40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/logo_linear"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:elevation="20dp"
                android:src="@drawable/logo_no_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Sign In"
                android:textSize="30sp"
                android:textColor="@color/main_orange"
                android:fontFamily="@font/sora_bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_texts_linear"
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/login_edit_bg"
                android:hint="Phone Number"
                android:textColor="@color/main_orange"
                android:inputType="phone"
                android:importantForAutofill="no"
                android:fontFamily="@font/sora_regular"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/login_edit_bg"
                android:hint="Password"
                android:textColor="@color/main_orange"
                android:inputType="textPassword"
                android:importantForAutofill="no"
                android:fontFamily="@font/sora_regular"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:elevation="20dp"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_in_button"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:text="Sign In"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sora_bold"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/main_orange" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>